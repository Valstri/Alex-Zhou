                              <Label fx:id="DisplayGrade" layoutX="429.0" layoutY="325.0" />
                              <Button fx:id="Remove" layoutX="124.0" layoutY="413.0" mnemonicParsing="false" onAction="#Remover" text="Remove" />
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
              </tabs>
            </TabPane>
         </children>
      </AnchorPane>
   </children>
