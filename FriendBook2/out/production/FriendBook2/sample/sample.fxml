                              <TextField fx:id="Grade" layoutX="139.0" layoutY="199.0" onAction="#Grade" />
                              <Button fx:id="Add" layoutX="200.0" layoutY="254.0" mnemonicParsing="false" onAction="#Adder" text="Add" />
